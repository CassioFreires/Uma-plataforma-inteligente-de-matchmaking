{
  "openapi": "3.0.0",
  "info": {
    "title": "API Profissional",
    "description": "Documentação da API de exemplo para fins profissionais",
    "version": "1.0.0",
    "contact": {
      "name": "Seu Nome",
      "url": "https://www.seusite.com",
      "email": "seuemail@dominio.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "paths": {
    "/api/v1/hello": {
      "get": {
        "description": "Retorna uma saudação simples",
        "responses": {
          "200": {
            "description": "Resposta bem-sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, World!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/goodbye": {
      "get": {
        "description": "Retorna uma despedida simples",
        "responses": {
          "200": {
            "description": "Resposta bem-sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Goodbye, World!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
